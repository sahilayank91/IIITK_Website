<md-card>
<div class="container">
            <form method="POST" name="batch" style="width:inherit">
                <!--<div class="container" >-->
                <md-toolbar md-scroll-shrink ng-if="true">
                    <div class="md-toolbar-tools">
                        <h3>
                            <span>All Students</span>
                        </h3>
                    </div>
                </md-toolbar>
                   <md-subheader> <pre><b>Year: </b>{{batch_details.year}}    <b>Type: </b>{{batch_details.type}}    <b>Branch: </b>{{batch_details.branch}}</pre></md-subheader>
                    <hr>
                    <div class="row">
                        <div class="col-md-5">
                            <label><b>Student Name</b></label>
                        </div>
                        <div class="col-md-1">
                        </div>

                        <div class="col-md-5">
                            <label><b>Student ID</b></label>
                        </div>
                        <div class="col-md-1">
                        </div>
                    </div>
                    <div class="row" ng-repeat="student in students">
                        <div class="col-md-5">
                            <input type="text" placeholder="Student Name" name="name" ng-model="student.name">
                        </div>
                        <div class="col-md-1">
                        </div>

                        <div class="col-md-5">
                            <input type="text" placeholder="Student Id" name="id" ng-model="student.college_id">
                        </div>
                        <div class="col-md-1">
                            <img src="/images/trashbtn.png" class="trashbtn" ng-click="removeStudentRow($index)">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <input type="text" placeholder="Student Name" name="name" ng-model="s_name">
                        </div>
                        <div class="col-md-1">
                        </div>
                        <div class="col-md-5">
                            <input type="text" placeholder="Student Id" name="id" ng-model="s_id">
                        </div>
                        <div class="col-md-1">
                            <img src="/images/plusbtn.png" class="addbtn" ng-click="addStudentRow()">
                        </div>
                    </div>

                    <!--<div class="clearfix">-->
                <div layout="row" flex>
                        <md-button flex="50" class="md-raised md-warn" ng-click="goToAllBatches()">CANCEL</md-button>
                        <md-button flex="50" class="md-primary md-raised" ng-click="addStudentToBatch(batch_details)">ADD</md-button>
                </div>
                    <!--</div>-->
                <!--</div>-->
            </form>

    </div>
</md-card>

<!--</div>-->