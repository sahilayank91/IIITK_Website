            </div>
        </md-toolbar>

        <md-subheader ng-if="subject.length > 0" class="md-no-sticky">No Curriculum has been updated yet.</md-subheader>

    <md-list-item class="md-3-line" ng-repeat="item in subject" ng-click="null">
        <img ng-src="/images/1.jpg" class="md-avatar" alt="{{item.subject}}" />
        <div class="md-list-item-text" layout="column">
            <h3>{{ item.subject }}</h3>
            <h4>{{ item.semester }}</h4>
            <p>{{ item.credits }}</p>
        </div>
        <div layout ="row">
        <md-button class="md-warn md-secondary" ng-click="updateCurriculum($index)">Update</md-button>
        <md-button class="md-warn md-secondary" ng-click="updateCurriculum($index)">Delete</md-button>
        </div>
        <md-divider></md-divider>
    </md-list-item>
</div>

