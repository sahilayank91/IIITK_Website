<!doctype html>
<html lang="en" ng-app="IIITKWebsite">
<head>
    <% include admin_layout.ejs%>
</head>

<body>
<div ng-controller="NewsController">

    <% include sidebar.ejs%>
    <main class="mdl-layout__content mdl-color--grey-100">
        <div style="width: inherit" ng-if="news_section">
            <md-card>
            <div class="container">
                <md-toolbar md-scroll-shrink ng-if="true">
                    <div class="md-toolbar-tools">
                        <h3>
                            <span>News</span>
                        </h3>
                    </div>
                </md-toolbar>
                    <hr>
                <md-card>
                    <div ng-repeat="news in allnews.data" style="width:inherit">
                        <br>

                        <div class="container news_block" style="width:inherit">
                            <h3>{{news.content.title}}</h3>
                            <span>  </span>
                            <h6>{{news.type}}</h6>

                            <div class="row">
                                <div class="col-md-11">
                                    {{news.content.text}}
                                </div>
                                <div class="col-md-1">
                                    <img src="/images/trashbtn.png" class="remove_btn" alt="X" ng-click="removeNews(news)">
                                </div>
                            </div>
                        </div>

                    </div>
                </md-card>

                    <md-button class="md-raised md-primary" style="background-color: #00c853" ng-click="addNewsClicked()" class="signupbtnfull" style="margin-top: 10px;">ADD NEWS</md-button>

                </div>
            </div>
        </md-card>

        <div style="width: inherit;" ng-show="addNews_section">   <!--   ng-if="allbatches" -->
            <div class="container">

                    <form method="POST" name="projectForm" style="width:inherit">
                        <!--<div class="container">-->
                        <md-toolbar md-scroll-shrink ng-if="true">
                            <div class="md-toolbar-tools">
                                <h3>
                                    <span>Add News</span>
                                </h3>
                            </div>
                        </md-toolbar>
                        <hr>
                        <md-input-container class="md-block">
                            <label>News Topic</label>
                            <input required name="title" ng-model="title">
                            <div ng-messages="projectForm.title.$error">
                                <div ng-message="required">This is required.</div>
                            </div>
                        </md-input-container>


                        <md-input-container class="md-block">
                            <label>News Content</label>
                            <input required name="text" ng-model="text">
                            <div ng-messages="projectForm.text.$error">
                                <div ng-message="required">This is required.</div>
                            </div>
                        </md-input-container>


                        <label>Type of news</label>
                        <md-select ng-model="type">
                            <md-optgroup label="Type">
                                <md-option ng-value="item" ng-repeat="item in type_options">{{item}}</md-option>
                            </md-optgroup>
                        </md-select>



                        <div layout="row" flex>
                        <md-button flex="50" class="md-warn md-raised" ng-click="goToNewsSection()">CANCEL</md-button>
                        <md-button flex="50" class="md-primary md-raised" ng-click="addNews()">ADD</md-button>
                        </div>
                        <!--</div>-->
                    </form>

                </div>

        </div>

    </main>

    </div>

</div>
</body>
